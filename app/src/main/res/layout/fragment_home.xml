    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="25dp"
            android:clipToPadding="false"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v4.view.ViewPager
                    android:id="@+id/myViewPagerAutoSlide"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"></android.support.v4.view.ViewPager>

                <LinearLayout
                    android:gravity="center"
                    android:id="@+id/SliderDots"
                    android:layout_width="65dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true"></LinearLayout>
            </RelativeLayout>

            <com.romainpiel.shimmer.ShimmerTextView
                android:id="@+id/shimmer_txt_MoiCapNhat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:padding="10dp"
                android:text="Mới cập nhật"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/myRecyclerPhimMoiCapNhat"
                android:layout_width="match_parent"
                android:layout_height="380dp"></android.support.v7.widget.RecyclerView>

            <com.romainpiel.shimmer.ShimmerTextView
                android:id="@+id/shimmer_txt_TopHangNgay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:padding="10dp"
                android:text="Top Shoujo"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/myRecyclerPhimTopShoujo"
                android:layout_width="match_parent"
                android:layout_height="380dp"></android.support.v7.widget.RecyclerView>

            <com.romainpiel.shimmer.ShimmerTextView
                android:id="@+id/shimmer_txt_topHanhDong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:padding="10dp"
                android:text="Top Hành Động"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/myRecyclerPhimTopHanhDong"
                android:layout_width="match_parent"
                android:layout_height="380dp"
                ></android.support.v7.widget.RecyclerView>

            <com.romainpiel.shimmer.ShimmerTextView
                android:id="@+id/shimmer_txt_topTinhCam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:padding="10dp"
                android:text="Top Tình Cảm"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/myRecyclerPhimTopTinhCam"
                android:layout_width="match_parent"
                android:layout_height="380dp"></android.support.v7.widget.RecyclerView>

            <com.romainpiel.shimmer.ShimmerTextView
                android:id="@+id/shimmer_txt_topHaiHuoc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:padding="10dp"
                android:text="Top Hài Hước"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/myRecyclerPhimTopHaiHuoc"
                android:layout_width="match_parent"
                android:layout_height="380dp"
                android:layout_marginBottom="5dp"></android.support.v7.widget.RecyclerView>

            <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/adViewHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="30dp"
                ads:adSize="BANNER"
                ads:adUnitId="ca-app-pub-3940256099942544/6300978111"></com.google.android.gms.ads.AdView>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>